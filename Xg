from sklearn.metrics import mean_absolute_error, r2_score import xgboost as xgb model = xgb.XGBRegressor(     n_estimators=500,     learning_rate=0.05,     max_depth=6,     subsample=0.8,     colsample_bytree=0.8,     tree_method="hist",     enable_categorical=True ) model.fit(X_train, y_train) # --- Training metrics ------------------------------------------------- y_train_pred = model.predict(X_train) train_mae = mean_absolute_error(y_train, y_train_pred) print(f"Training MAE : {train_mae:.2f}") # --- Test metrics ----------------------------------------------------- y_test_pred = model.predict(X_test) print(f"Test R²      : {r2_score(y_test, y_test_pred):.3f}") print(f"Test MAE     : {mean_absolute_error(y_test, y_test_pred):.2f}")
